<script>
function connectWeb(){
  ws = new WebSocket("ws://" + 'fayego-dwno31.c9.io' + ":8080/");

  ws.onmessage = function(event) {
    $("#messages").append("<p>" + event.data + "</p>");
  };

  ws.onclose = function() {
    console.log("fired and start again");
    setTimeout(connectWeb(),100); 
  };

  ws.onopen = function() {
    console.log("Connected");
    ws.send("Hello world!");
  };

  $("#new-message").bind("submit", function(event) {
    event.preventDefault();
    ws.send($("#message-text").val());
    $("#message-text").val("");
  });
};
$(document).ready(function() {
  
  connectWeb();
  
});
</script>

